library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;


entity configureDice is
port (selection : in std_logic_vector(1 downto 0);
		rollState : inout std_logic := '0'
		numOfSides : out std_logic_vector(3 downto 0);
		numOfDice : out std_logic_vector(3 downto 0)
); 
end configureDice;
		

architecture behavioural of configureDice is
begin

signal hex_disp : std_logic_vector(6 downto 0);

numOfSides <= (others => '0');
numOfDice <= (others => '0');


	process(selection, numOfSides, numOfDice)
	begin
		while rollState := '0'
			if selection(0) = '1' then 
				numOfSides = numOfSides + '1';
			elsif selection(1) = '1' then
				numOfDice = numOfDice + '1';
			end if;
		end while;
	end process;
		
end behavioural;
